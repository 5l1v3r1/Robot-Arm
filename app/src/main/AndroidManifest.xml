<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.tunca.robotarm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_robot"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="me.tunca.robotarm.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="me.tunca.robotarm.Scan"
            android:label="@string/app_name"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="me.tunca.robotarm.Select"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="me.tunca.robotarm.About"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>

    </application>

</manifest>
